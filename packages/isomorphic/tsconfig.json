{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "jsx": "react",
        "target": "es5",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}